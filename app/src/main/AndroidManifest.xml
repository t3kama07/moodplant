<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- âœ… Add notification permission -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MoodPlant"
        tools:targetApi="31">

        <!-- Screens -->
        <activity android:name=".ui.screens.WeeklyResultScreen" android:exported="false" />
        <activity android:name=".ui.screens.PlantDisplayScreen" android:exported="false" />
        <activity android:name=".ui.screens.MoodPickerScreen"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.MoodPlant">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Broadcast Receiver for notifications -->
        <receiver android:name=".ui.screens.ReminderBroadcastReceiver" />
    </application>

</manifest>
